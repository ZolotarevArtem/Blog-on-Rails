<%= form_for @user do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :email %><br>
    <%= f.text_area :email %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.text_area :passwor %>
  </p>

  <p>
    <%= f.label :password_confirmation %><br>
    <%= f.text_area :passwor_confirmation %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>