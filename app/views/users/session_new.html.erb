<h1>Вход</h1><br />
<%= form_for @user, url: session_new_path do |f| %>
  <p>
    <%= f.label :name, "Имя" %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :password, "Пароль" %>
    <%= f.password_field :password %>
  </p>
 
  <p>
    <%= f.submit "Вход", class: "btn btn-primary" %>
  </p>
<% end %>