<h1>Регистрация</h1><br />
<%= form_for @user, url: new_user_path do |f| %>
  <p>
    <%= f.label :name, "Имя" %>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :email, "Адрес" %>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :password, "Пароль" %>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password_confirmation, "Повторите пароль" %>
    <%= f.password_field :password_confirmation %>
  </p>
 
  <p>
    <%= f.submit "Регистрация", class: "btn btn-primary" %>
  </p>
<% end %>